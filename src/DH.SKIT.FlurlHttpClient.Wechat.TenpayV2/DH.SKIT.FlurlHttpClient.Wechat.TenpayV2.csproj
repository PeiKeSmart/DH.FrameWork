<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="Current">
	<Import Project="../../version.props" />

	<PropertyGroup>
		<LangVersion>latest</LangVersion>
		<OutputType>Library</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<RootNamespace>SKIT.FlurlHttpClient.Wechat.TenpayV2</RootNamespace>
		<AssemblyName>DH.SKIT.FlurlHttpClient.Wechat.TenpayV2</AssemblyName>
		<AssemblyTitle>DH框架微信支付 API v2 版客户端</AssemblyTitle>
		<Description>用于DH框架的一个微信支付 API v2 版客户端，支持普通商户、境内服务商、银行服务商、跨境支付模式，仅包含微信支付未提供 v3 版 API 的部分功能。如需微信支付 v3 版 API 客户端，欢迎使用 `DG.SKIT.FlurlHttpClient.Wechat.TenpayV3`</Description>
		<Company>湖北登灏科技有限公司</Company>

		<OutputPath>..\Bin</OutputPath>
		<DocumentationFile>$(OutputPath)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
		<GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>

		<!--将此参数设置为true，以获取从NuGet缓存复制到项目输出的dll。
     如果您的插件具有nuget包，则需要将此参数设置为true
     确保从NuGet缓存复制的dll到项目的输出-->
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<!-- 对控制器/操作/方法没有阻止注释禁用警告 -->
		<NoWarn>1701;1702;1705;1591</NoWarn>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<!--禁止生成launchSettings.json-->
		<NoDefaultLaunchSettingsFile>True</NoDefaultLaunchSettingsFile>
	</PropertyGroup>

	<PropertyGroup>
		<IsPackable>true</IsPackable>
		<PackageId>$(AssemblyName)</PackageId>
		<Authors>$(Company)</Authors>
		<PackageProjectUrl>https://www.haocoding.com/</PackageProjectUrl>
		<PackageIcon>DH.png</PackageIcon>
		<RepositoryUrl>https://gitee.com/chuangchu/DH.FrameWork</RepositoryUrl>
		<RepositoryType>Git</RepositoryType>
		<PackageTags>湖北登灏科技有限公司;DH组件;DH;$(AssemblyName)</PackageTags>
		<PackageReleaseNotes>用于DH框架的一个微信支付 API v2 版客户端，支持普通商户、境内服务商、银行服务商、跨境支付模式，仅包含微信支付未提供 v3 版 API 的部分功能。</PackageReleaseNotes>
		<AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Debug'">
		<DefineConstants>$(DefineConstants);DEBUG</DefineConstants>
		<DebugType>full</DebugType>
		<Optimize>false</Optimize>
		<WarningLevel>3</WarningLevel>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\DH.SKIT.FlurlHttpClient.Common\DH.SKIT.FlurlHttpClient.Common.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="..\..\Doc\DH.png" Link="DH.png" PackagePath="\" />
	</ItemGroup>

	<ItemGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

</Project>
