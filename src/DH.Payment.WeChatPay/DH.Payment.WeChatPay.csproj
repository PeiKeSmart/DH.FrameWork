<Project Sdk="Microsoft.NET.Sdk.Web">
	<Import Project="../../version.props" />

	<PropertyGroup>
		<LangVersion>latest</LangVersion>
		<OutputType>Library</OutputType>
		<ImplicitUsings>enable</ImplicitUsings>
		<TargetFramework>net7.0</TargetFramework>
		<RootNamespace>DG.Payment.WeChatPay</RootNamespace>
		<AssemblyName>DG.Payment.WeChatPay</AssemblyName>
		<AssemblyTitle>微信支付类库</AssemblyTitle>
		<Description>微信支付类库，参考https://github.com/essensoft/payment</Description>
		<Company>湖北登灏科技有限公司</Company>

		<OutputPath>..\Bin</OutputPath>
		<DocumentationFile>$(OutputPath)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
		<DefineConstants>$(DefineConstants);__CORE__</DefineConstants>
		<GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
		<StaticWebAssetsEnabled>false</StaticWebAssetsEnabled>

		<!--将此参数设置为true，以获取从NuGet缓存复制到项目输出的dll。
     如果您的插件具有nuget包，则需要将此参数设置为true
     确保从NuGet缓存复制的dll到项目的输出-->
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<!-- 对控制器/操作/方法没有阻止注释禁用警告 -->
		<NoWarn>1701;1702;1705;1591</NoWarn>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<!--禁止生成launchSettings.json-->
		<NoDefaultLaunchSettingsFile>True</NoDefaultLaunchSettingsFile>
	</PropertyGroup>

	<PropertyGroup>
		<IsPackable>true</IsPackable>
		<PackageId>$(AssemblyName)</PackageId>
		<Authors>$(Company)</Authors>
		<PackageProjectUrl>https://www.haocoding.com/</PackageProjectUrl>
		<PackageIcon>DG.png</PackageIcon>
		<RepositoryUrl>https://www.gitccc.com/admin/DG.FrameWork</RepositoryUrl>
		<RepositoryType>Git</RepositoryType>
		<PackageTags>荆州创楚科技有限公司;DG组件;DG;$(AssemblyName)</PackageTags>
		<PackageReleaseNotes>微信支付类库</PackageReleaseNotes>
		<AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Debug'">
		<DefineConstants>$(DefineConstants);DEBUG</DefineConstants>
		<DebugType>full</DebugType>
		<Optimize>false</Optimize>
		<WarningLevel>3</WarningLevel>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="..\..\Doc\DG.png" Link="DG.png" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\DG.AspNetCore\DG.AspNetCore.csproj" />
		<ProjectReference Include="..\DG.Core\DG.Core.csproj" />
		<ProjectReference Include="..\DG.Payment.Security\DG.Payment.Security.csproj" />
	</ItemGroup>

</Project>
