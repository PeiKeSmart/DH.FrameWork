<Project>
	<PropertyGroup>
		<VersionPrefix>1.0</VersionPrefix>
		<VersionPrefixBeta>-beta00003</VersionPrefixBeta>
		<VersionSuffix>$([System.DateTime]::Now.ToString(`yyyy.MMdd`))</VersionSuffix>
		<Version>$(VersionPrefix).$(VersionSuffix)$(VersionPrefixBeta)</Version>
		<FileVersion>$(VersionPrefix).$(VersionSuffix)</FileVersion>
		<AssemblyVersion>$(VersionPrefix).$([System.DateTime]::Now.ToString(`yyyy.MMdd`))</AssemblyVersion>
	</PropertyGroup>
</Project> 